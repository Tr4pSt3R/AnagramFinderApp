<p id="notice"><%= notice %></p>
<h1><%= link_to @upload.filename, @upload %></h1>
Loaded in: <%= set_file_loading_time %>

<h2>Anagrams</h2>
	<%= form_for [@upload, @upload.anagrams.build] do |f| %>
		<%= f.text_field :word %>
		<%= f.submit "Go" %>
	<% end %>

	<div class="row">
		<div class="span4">
			<% @upload.anagrams.each do |anagram| %>
			<p>
				<p><%= anagram.created_at %> </p>
				>:
				<%=  %> anagrams found for "<%= anagram.word %>" in ..
				<p>  <%=  %></p>
				<p><%= link_to "Remove", [@upload, anagram], :method => :delete, :confirm => "Are you sure?", :class => 'btn btn-secondary'%></p>
			</br>
			</p> 
		<% end %>
		</div>
	</div>
	
</br>
<div class="form-actions">
	<%= link_to 'Back', uploads_path, :class => 'btn' %>
	|
	<%= link_to 'Edit', edit_upload_path(@upload), :class => 'btn' %> 
	|
	<%= link_to "Delete", @upload, :method => :delete, :confirm => "Are you sure?", :class => 'btn btn-danger'%>
</div>